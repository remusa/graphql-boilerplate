{
    "name": "graphql-backend",
    "version": "1.0.0",
    "description": "GraphQL backend",
    "author": "rms",
    "license": "ISC",
    "keywords": [
        "node",
        "graphql",
        "apollo-server"
    ],
    "main": "index.js",
    "engines": {
        "node": "10.11.0"
    },
    "scripts": {
        "start": "nodemon --exec babel-node src/index.js",
        "dev": "cross-env NODE_ENV=development nodemon --exec babel-node --inspect src/index.js",
        "test:watch": "cross-env NODE_ENV=test jest --silent --watch",
        "test:coverage": "cross-env NODE_ENV=test jest --silent --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier \"src/**/*.{js,html}\" --write",
        "deploy:heroku": "cd .. && git subtree push --prefix backend heroku-backend master",
        "deploy:backend": "cd .. && npm run deploy:heroku",
        "frontend": "cd .. & cd frontend/ & npm run dev"
    },
    "dependencies": {
        "apollo-server": "^2.6.4",
        "apollo-server-express": "^2.6.4",
        "argon2": "^0.24.0",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "graphql": "^14.3.1",
        "helmet": "^3.18.0",
        "jsonwebtoken": "^8.5.1",
        "nodemailer": "^6.2.1",
        "nodemon": "^1.19.1",
        "npm-run-all": "^4.1.5",
        "pg": "^7.11.0",
        "sequelize": "^5.15.1",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/node": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "babel-eslint": "^9.0.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "eslint-config-wesbos": "0.0.19",
        "mailgun-js": "^0.22.0",
        "prettier": "^1.18.2"
    },
    "eslintConfig": {
        "extends": [
            "wesbos"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    }
}
